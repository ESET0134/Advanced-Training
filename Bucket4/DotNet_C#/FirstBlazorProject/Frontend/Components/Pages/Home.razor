@page "/"
@using Frontend.Model
@inject HttpClient Http

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>


<table class=" table table-striped table-bordered bg-light">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Birthday</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var (index, item) in student.Select((item, i) => (i + 1, item)))
        {
            <tr>
                <td>@index</td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    @item.Birthday
                </td>
            </tr>
        }
    </tbody>

</table>


@code {

    private List<Student> student = new List<Student>();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }


    private async Task LoadDataAsync()
    {
        student = await Http.GetFromJsonAsync<List<Student>>("Student");
    }
}